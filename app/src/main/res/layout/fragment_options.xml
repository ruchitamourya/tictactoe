<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <!--<include-->
        <!--android:id="@+id/toolbar"-->
        <!--layout="@layout/toolbar"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/g4"
        android:padding="20dp">

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Names"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:layout_marginLeft="8dp"
        android:textColor="@android:color/white"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/txt_name"
            >
    <TextView
        android:id="@+id/txt_p1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:text="@string/player1"
        />

        <EditText
            android:id="@+id/etxt_p1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="player1"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            android:textColor="@android:color/black"
            tools:ignore="RtlCompat" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/txt_name"
            >
            <TextView
                android:id="@+id/txt_p2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:text="@string/player2"
                />

            <EditText
                android:id="@+id/etxt_p2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="player2"
                android:textSize="20sp"
                android:layout_marginLeft="15dp"
                android:textColor="@android:color/black"
                tools:ignore="RtlCompat" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sound_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/txt_name"
            >
            <TextView
                android:id="@+id/txt_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:text="Sound"
                />

          <RadioGroup
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
              <RadioButton
                  android:id="@+id/rbn_on"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="On"
                  android:checked="true"
                  android:textSize="20dp"
                  android:textColor="@android:color/white"
                  android:layout_marginLeft="20dp"/>

              <RadioButton
                  android:id="@+id/rbn_off"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Off"
                  android:textColor="@android:color/white"
                  android:textSize="20dp"
                  android:layout_marginLeft="20dp"/>
          </RadioGroup>

        </LinearLayout>


        <android.support.v7.widget.CardView
            android:id="@+id/card_v_btn_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="3dp">

        <Button
            android:id="@+id/btn_done"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="done"
            android:textSize="18sp"
            android:background="@color/colorAccent"/>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v7.widget.CardView>